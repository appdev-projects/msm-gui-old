<h1>Director details</h1>
<div>
  <div>
      <h4>id: #<%= @director.id %></h4>
  </div>
  <div>
    name: <%= @director.name %>
  </div>
  <div>
    dob: <%= @director.dob %>
  </div>
  <div>
    bio: <%= @director.bio %>
  </div>
  <div>
    image_url: <%= @director.image_url %>
  </div>
  <div>
    created_at: <%= @director.created_at %>
  </div>
  <div>
    updated_at: <%= @director.updated_at %>
  </div>
</div>
<hr>

<form action="/patch_director/<%= @director.id %>">
  <div>
    <label for="name">name</label>
    <input id="name" name="name" type="text" value="<%= @director.name %>">    
  </div>
  <div>
    <label for="dob">dob</label>
    <input id="dob" name="dob" type="date" value="<%= @director.dob %>">    
  </div>
  <div>
    <label for="bio">bio</label>
    <textarea id="bio" name="bio"><%= @director.bio %></textarea>  
  </div>
  <div>
    <label for="image_url">image_url</label>
    <input id="image_url" name="image_url" type="text" value="<%= @director.image_url %>">    
  </div>

  <input type="submit">
</form>

